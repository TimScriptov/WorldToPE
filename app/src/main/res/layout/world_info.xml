<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:orientation="vertical"
		android:padding="10.0dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<EditText
			android:id="@+id/world_info_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_folder"/>

			<EditText
				android:id="@+id/world_info_folder_name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:textSize="18.0sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/gamemode"/>

			<TextView
				android:textSize="18.0sp"
				android:id="@+id/world_info_gamemode"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<Button
				android:id="@+id/world_info_gamemode_change"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/change"/>

		</LinearLayout>

		<TextView
			android:textSize="18.0sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/world_info_time"/>

		<EditText
			android:id="@+id/world_info_time_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:numeric="signed"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<Button
				android:id="@+id/world_info_time_to_morning"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_time_set_morning"/>

			<Button
				android:id="@+id/world_info_time_to_night"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_time_set_night"/>

		</LinearLayout>

		<TextView
			android:textSize="18.0sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/world_info_player_location"/>

		<TextView
			android:textSize="18.0sp"
			android:id="@+id/world_info_player_x"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:textSize="18.0sp"
			android:id="@+id/world_info_player_y"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:textSize="18.0sp"
			android:id="@+id/world_info_player_z"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<Button
			android:id="@+id/world_info_spawn_to_player_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/world_info_spawn_to_player"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<Button
				android:id="@+id/world_info_warp_to_spawn_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_warp_to_spawn"/>

			<Button
				android:id="@+id/world_info_move_player"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_move_player"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_half_hearts"/>

			<EditText
				android:id="@+id/world_info_health"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:numeric="signed"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<Button
				android:id="@+id/world_info_full_health"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_set_to_full_health"/>

			<Button
				android:id="@+id/world_info_infinite_health"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_set_to_infinite_health"/>

		</LinearLayout>

		<CheckBox
			android:id="@+id/world_info_may_fly"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/world_info_may_fly"/>

		<CheckBox
			android:id="@+id/world_info_flying"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/world_info_flying"/>

		<CheckBox
			android:id="@+id/world_info_invulnerable"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/world_info_invulnerable"/>

		<CheckBox
			android:id="@+id/world_info_insta_build"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/world_info_insta_build"/>

		<TextView
			android:textSize="18.0sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/world_info_day_cycle_stop_time"/>

		<EditText
			android:id="@+id/world_info_day_cycle_stop_time_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:numeric="signed"/>

		<CheckBox
			android:id="@+id/world_info_spawn_mobs"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/world_info_spawn_mobs"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/world_info_sideways_mode"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<Button
				android:id="@+id/world_info_sideways_on"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@android:string/yes"/>

			<Button
				android:id="@+id/world_info_sideways_off"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@android:string/no"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/world_info_generator"/>

			<Spinner
				android:entries="@array/world_info_generators"
				android:id="@+id/world_info_generator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

